<% provide(:title, "All") %>
<h1>List of all flowers</h1>


<div class="media">
	<% @flowers.each do |flower| %>
		<br/>
		<div class="media-left">
			<%= link_to image_tag(flower.image_url, class: "media-object", height: '80', width: '90'), flower %>
		</div>
		<div class="media-body media-middle">
			<%= link_to flower.name, flower %>
			<span class="option">
				| <%= link_to "edit", edit_flower_path(flower) %>
				| <%= link_to "delete", flower, method: :delete,
																				data: { confirm: "Delete this flower?" } %>
			</span>
		</div>
	<% end %>
</div>
