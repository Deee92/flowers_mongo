<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
		<div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      	<span class="sr-only">Toggle navigation</span>
      	<span class="icon-bar"></span>
      	<span class="icon-bar"></span>
        <span class="icon-bar"></span>
    	</button>
			<%= link_to "Flowers", root_path, id: "logo" %>
		</div>
		<div id="navbar" class="collapse navbar-collapse">
    	<ul class="nav navbar-nav navbar-right">
    		<li class="<%= 'active' if current_page?(flowers_path) %>"><%= link_to "All", flowers_path %></li>
        <li class="<%= 'active' if current_page?(new_flower_path) %>"><%= link_to "New", new_flower_path %></li>
        <li>
          <!-- Search bar -->
          <%= form_tag flowers_path, method: "get", class: "navbar-form" do %>
            <div class="input-group">
              <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search" %>
              <div class="input-group-btn">
                <button type="submit" class="btn btn-default">Go</button>
              </div>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
	</div>
