<% provide(:title, "Edit") %>
<h1 class="nice_heading">Edit this flower</h1>
<hr>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@flower) do |f| %>
			<%= render 'fields', f: f %>
			
			<%= image_tag(@flower.image_url, class: "photo img-responsive", style: "margin: 2em 0;") %>

			<%= f.label :image_url, "New image URL", class: "form_field" %>
			<!-- Use file_field to choose file -->
			<%= f.text_field :image_url, class: "form-control" %>

			<div class="row">
				<div class="col-md-6">
					<%= f.submit "Update", class: "btn btn-primary" %>
				</div>
				<div class="col-md-6">
					<%= link_to "Cancel", flowers_path, class: "btn btn-danger", style: "width: 100%;" %>
				</div>
			</div>
		
		<% end %>
	</div>
</div>

