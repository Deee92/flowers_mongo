<% provide(:title, "New") %>
<h1 class="center">Save a new flower</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@flower) do |f| %>
			<%= render 'shared/error_messages' %>

			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>

			<%= f.label :bot_name, "Botanical name" %>
			<%= f.text_field :bot_name, class: "form-control" %>

			<%= f.label :significance %>
			<%= f.text_area :significance, rows: 6, class: "form-control" %>

			<%= f.label :petals, "Number of petals" %>
			<%= f.text_field :petals, class: "form-control" %>

			<%= f.label :colour %>
			<%= f.text_field :colour, class: "form-control" %>

			<%= f.label :description %>
			<%= f.text_area :description, rows: 6, class: "form-control" %>

			<%= f.label :place %>
			<%= f.text_field :place, class: "form-control" %>

			<%= f.label :climate %>
			<%= f.text_field :climate, class: "form-control" %>

			<%= f.label :season %>
			<%= f.text_field :season, class: "form-control" %>

			<%= f.label :size %>
			<%= f.text_field :size, class: "form-control" %>

			<%= f.label :image_url, "Upload an image" %>
			<%= f.file_field :image_url, class: "form-control" %>

			<%= f.submit "Save", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

