<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
		<div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
      	<span class="sr-only">Toggle navigation</span>
      	<span class="icon-bar"></span>
      	<span class="icon-bar"></span>
        <span class="icon-bar"></span>
    	</button>
			<%= link_to "Flowers", root_path, id: "logo" %>
		</div>
		<div id="navbar" class="collapse navbar-collapse">
    	<ul class="nav navbar-nav navbar-right">
        <li class="<%= 'active' if current_page?(origin_path) %>"><%= link_to "Origin", origin_path %></li>
    		<li class="<%= 'active' if current_page?(flowers_path) %>"><%= link_to "All", flowers_path %></li>
        <!-- <li class="<%= 'active' if current_page?(new_flower_path) %>"><%= link_to "New", new_flower_path %></li> -->
        <% if current_user %>
          <li class="dropdown <%= 'active' if current_page?(user_path(current_user)) %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Your profile", user_path(current_user) %></li>
              <li role="presentation" class="divider"></li>
              <li class="dropdown-header">Not you?</li>
              <li><%= link_to "Sign out", signout_path %></li>
            </ul>
          </li>
        <% else %>
          <li class="<%= 'active' if current_page?(signin_path) %>"><%= link_to "Sign in", signin_path %></li>
        <% end %>
        <li>
          <!-- Search bar -->
          <%= form_tag flowers_path, method: "get", class: "navbar-form" do %>
            <div class="input-group">
              <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Search" %>
              <div class="input-group-btn">
                <button type="submit" class="btn btn-danger">Go</button>
              </div>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
	</div>
</header>
