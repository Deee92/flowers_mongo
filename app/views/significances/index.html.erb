<% provide(:title, "Significances") %>
<div id="significances">
  <div class="row" style="padding: 1em;">
    <div class="col-md-6"><h1 style="margin: 0;">Significances</h1></div>
    <div class="col-md-6">
      <input type="text" class="search form-control" placeholder="Search" />
    </div>
  </div>
  <hr/>
  <div class="scroll">
    <a href="#" class="sign-nav">
      <span class="glyphicon glyphicon-menu-up sign-nav-button"></span>
    </a>
  </div>
  <div class="list">
    <center>
      <nav>
        <ul class="pagination pagination-sm">
          <li><a href="#a">a</a></li>
          <li><a href="#b">b</a></li>
          <li><a href="#c">c</a></li>
          <li><a href="#d">d</a></li>
          <li><a href="#e">e</a></li>
          <li><a href="#f">f</a></li>
          <li><a href="#g">g</a></li>
          <li><a href="#h">h</a></li>
          <li><a href="#i">i</a></li>
          <li><a href="#j">j</a></li>
          <li><a href="#k">k</a></li>
          <li><a href="#l">l</a></li>
          <li><a href="#m">m</a></li>
          <li><a href="#n">n</a></li>
          <li><a href="#o">o</a></li>
          <li><a href="#p">p</a></li>
          <li><a href="#q">q</a></li>
          <li><a href="#r">r</a></li>
          <li><a href="#s">s</a></li>
          <li><a href="#t">t</a></li>
          <li><a href="#u">u</a></li>
          <li><a href="#v">v</a></li>
          <li><a href="#w">w</a></li>
          <li><a href="#y">y</a></li>
        </ul>
      </nav>
    </center>
    <a id="a" class="anchor"></a>
    <% letter = "a" %>
    <h1><%= letter %></h1>
    <% @significances.each do |significance| %>
      <% if letter != significance.word.split("").first.downcase %>
        <% letter = significance.word.split("").first.downcase %>
        <hr/>
        <a class="anchor" id="<%= letter %>"></a>
        <h1><%= letter %></h1>
      <% end %>
      <div class="name_card" style="padding: 0.5em 1em 1em 1em; margin: 1.5em;">
        <h3 class="sign-word"><%= significance.word %></h3>
        <div class="row">
          <% significance.occurrences.each do |occurrence| %>
            <div class="col-md-6">
              <%= link_to occurrence[:url] do %>
                <span class="sign-sign"><%= occurrence[:significance] %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
