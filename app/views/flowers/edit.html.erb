<% provide(:title, "Edit") %>
<h1 class="center">Update this flower</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@flower) do |f| %>
			<%= render 'fields', f: f %>
			
			<%= image_tag(@flower.image_url) %>
			<%= f.label :image_url, "Chage image" %>
			<%= f.file_field :image_url, class: "form-control" %>

			<%= f.submit "Update", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>

