<% provide(:title, "Edit profile #{current_user.name}") %>
<h1 class="nice_heading"><%= @user.name %></h1>
<hr/>

<div class="row", style="margin-top: 2em;">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'edit_user_form', f: f %>
      <div class="row">
        <div class="col-md-6", style="margin-top: 1em;">
          <%= f.submit "Save", class: "btn btn-sm btn-primary" %>
        </div>
        <div class="col-md-6", style="margin-top: 1em;">
          <%= link_to "Cancel", user_path(@user), class: "btn btn-sm btn-danger", style: "width: 100%;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
